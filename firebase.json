{
  "hosting": {
    "public": "build",  
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "source": "./Backend/functions",
    "predeploy": [
      "npm run lint",
      "npm run build"
    ],
    "engines": {"node": "16"}
  },
  
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true
    }
  }
}
